                                        <Setter TargetName="Border" Property="Background" Value="#6D95E7" />

                                    </DataTrigger>
                                </DataTemplate.Triggers>
                            </DataTemplate>

                        </ListView.ItemTemplate>
                    </ListView>


                   
                </StackPanel>

                <StackPanel Grid.Column="1">

                    <Grid>

                        <TextBlock
                        Margin="20 20 0 0"
                        FontSize="18"
                        FontWeight="DemiBold"
                        Text="Thông Tin Chi Tiết"/>


                    </Grid>


                    <Grid
                        Height="100">

                        <TextBlock
                            FontSize="17"
                            FontWeight="DemiBold"
                            Margin="20 10 0 0"
                            Text="Mã Lớp Học Phần"/>

                        <TextBox
                            Text="{Binding MaLopHocPhan,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}"                            
                            Margin="20 0"
                            TextWrapping="WrapWithOverflow"
                            Foreground="Black"
                            Style="{StaticResource MaterialDesignFilledTextFieldTextBox}"
                            Height="60"
                            VerticalAlignment="Bottom">
                        </TextBox>
                    </Grid>

                    <Grid
                        Height="100">

                        <TextBlock
                            FontSize="17"
                            FontWeight="DemiBold"
                            Margin="20 10 0 0"
                            Text="Ngày Học Trong Tuần"/>

                        <TextBox
                            Text="{Binding NgayHocTrongTuan,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}"
