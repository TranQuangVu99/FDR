                                <materialDesign:PackIcon
                                Kind="Search"
                                Width="30"
                                Height="30"
                                VerticalAlignment="Center"
                                Margin="40 0 0 0"/>

                                <TextBox
                                Text="{Binding KeyClassSub,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"   
