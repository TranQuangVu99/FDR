                            TextWrapping="WrapWithOverflow"
                            Foreground="Black"
                            Style="{StaticResource MaterialDesignFilledTextFieldTextBox}"
                            Height="60"
                            VerticalAlignment="Bottom">
                        </TextBox>
                    </Grid>


                    <Grid
                        Height="100">

                        <TextBlock
                            FontSize="17"
                            FontWeight="DemiBold"
                            Margin="20 10 0 0"
                            Text="Ngày Bắt Đầu"/>

                        <DatePicker
                             Text="{Binding NgayBatDau,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}"
