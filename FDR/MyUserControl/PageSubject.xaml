                                materialDesign:HintAssist.Hint="Tìm Kiếm Bằng ...."
                                Margin="90 0 30 0">

                                </TextBox>
                            </Grid>

                        </Border>

                        <ComboBox
                            Width="130"
                            Height="46"
                            FontSize="16"
                            VerticalContentAlignment="Center"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Right"
                            materialDesign:HintAssist.Hint="Key"
                            materialDesign:HintAssist.Foreground="Gray"
                            ItemsSource="{Binding ListKeyClassSub,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}"
                            SelectedItem="{Binding SelectedKeyClassSub,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}"
                            Style="{StaticResource MaterialDesignFloatingHintComboBox}">

                        </ComboBox>

                    </Grid>

                    <ListView
                            HorizontalContentAlignment="Center"
                            Margin="20,10,20,0"
                            Height="560"
                            ScrollViewer.VerticalScrollBarVisibility="Hidden"
						    ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                            ItemsSource="{Binding ListClassSub, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"  
						    SelectedItem="{Binding SelectedClassSub,UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" 
                            ItemContainerStyle="{StaticResource ListViewItemStyle1}">

                        <ListView.ItemTemplate>

                            <DataTemplate>

                                <Border x:Name="Border"
                                        Width="620"
                                        Background="#6EC6FF"
                                        Margin="20 10"
                                        Height="50">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition  Width="1.2*" />
                                            <ColumnDefinition />
                                            <ColumnDefinition />
                                            <ColumnDefinition />
                                            <ColumnDefinition />
                                            <ColumnDefinition/>
                                        </Grid.ColumnDefinitions>

                                        <Grid Grid.Column="0">

                                            <TextBlock  
                                                Foreground="White"
                                                FontSize="18"
                                                TextWrapping="WrapWithOverflow"
                                                Text="{Binding MaLopHocPhan,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}"
                                                VerticalAlignment="Center"
                                                HorizontalAlignment="Left"
                                                />

                                        </Grid>

                                        <Grid Grid.Column="1">

                                            <TextBlock Foreground="White"
                                                TextWrapping="WrapWithOverflow"
                                                FontSize="17"
                                                Text="{Binding NgayBatDau,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}"
                                                VerticalAlignment="Center"
                                                HorizontalAlignment="Center"/>

                                        </Grid>

                                        <Grid Grid.Column="2">

                                            <TextBlock Foreground="White"
                                                TextWrapping="WrapWithOverflow"
                                                FontSize="17"
                                                Text="{Binding NgayKetThuc,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}"
                                                VerticalAlignment="Center"
                                                HorizontalAlignment="Center"/>

                                        </Grid>

                                        <Grid Grid.Column="3">

                                            <TextBlock Foreground="White"
                                                TextWrapping="WrapWithOverflow"
                                                FontSize="17"
                                                Text="{Binding NgayHocTrongTuan,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}"
                                                VerticalAlignment="Center"
                                                HorizontalAlignment="Center"/>

                                        </Grid>

                                        <Grid Grid.Column="4">

                                            <TextBlock Foreground="White"
                                                TextWrapping="WrapWithOverflow"
                                                FontSize="17"
                                                Text="{Binding GioHoc,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}"
                                                VerticalAlignment="Center"
                                                HorizontalAlignment="Center"/>

                                        </Grid>

                                        <Grid Grid.Column="6">

                                            <TextBlock      Foreground="White"
                                                TextWrapping="WrapWithOverflow"
                                                FontSize="20"
                                                Text="{Binding SiSoHocVien,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}"
                                                VerticalAlignment="Center"
                                                HorizontalAlignment="Center"
                                                />

                                        </Grid>

                                    </Grid>

                                </Border>


                                <DataTemplate.Triggers>
                                    <DataTrigger
                                    Binding="{Binding RelativeSource={RelativeSource FindAncestor,   
